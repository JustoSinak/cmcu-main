{
    "name": "2ncorporate/cmcuapp",
    "type": "project",
    "description": "Application de gestion hospitalière",
    "keywords": ["Hospitalière", "Gestion", "Medical"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "doctrine/dbal": "^3.0",
        "dyrynda/laravel-cascade-soft-deletes": "^4.3",
        "hardevine/shoppingcart": "^3.4",
        "intervention/image": "*",
        "intervention/image-laravel": "*",
        "laracasts/flash": "^3.2",
        "laravel-notification-channels/fcm": "^4.0",
        "laravel/framework": "^11.0",
        "laravel/octane": "^2.13",
        "laravel/scout": "^10.0",
        "laravel/tinker": "^2.8",
        "predis/predis": "^3.2",
        "spatie/laravel-google-calendar": "^3.0",
        "spatie/laravel-html": "^3.5",
        "spatie/laravel-image-optimizer": "^1.7",
        "spatie/laravel-responsecache": "^7.0",
        "zanysoft/laravel-pdf": "*"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "barryvdh/laravel-ide-helper": "^3.6",
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true,
            "php-http/discovery": true,
            "pestphp/pest-plugin": true
        },
        "platform-check": false,
        "process-timeout": 0,
        "apcu-autoloader": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan view:clear",
            "@php artisan cache:clear || true"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan storage:link --ansi"
        ],
        "optimize": [
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan view:cache",
            "@php artisan event:cache",
            "@composer dump-autoload -o --apcu"
        ],
        "optimize-production": [
            "@php artisan config:cache",
            "@php artisan route:cache",
            "@php artisan view:cache",
            "@php artisan event:cache",
            "@php artisan icons:cache",
            "@composer dump-autoload -o --apcu --classmap-authoritative"
        ],
        "clear-all": [
            "@php artisan config:clear",
            "@php artisan route:clear",
            "@php artisan view:clear",
            "@php artisan event:clear",
            "@php artisan cache:clear",
            "@composer dump-autoload"
        ]
    }
}
